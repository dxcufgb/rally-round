{
  "extends": [
    "standard",
    "eslint:recommended",
    "prettier",
    "prettier/standard",
    "plugin:jest/recommended"
  ],
  "plugins": ["prettier", "json", "jest"],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true
    }
  },
  "env": {
    "es6": true,
    "jest/globals": true
  },
  "rules": {
    "prettier/prettier": "error",
    "import/first": 1,
    "import/prefer-default-export": 1,
    "import/no-named-as-default": 0
  },
  "globals": {
    "process": true
  }
}