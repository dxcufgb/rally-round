							<td>{{[RIBADELLES]}}</td>
							<td></td>
							<td class="bold">{{total}}</td>
							<td>{{gap}}</td>
						</tr>
						{{/with}}{{/each}}
					</tbody>

				</table>
			</div>

		</div>
	</div>
</body>

</html>