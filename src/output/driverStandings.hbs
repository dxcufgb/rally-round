<html>

<head>
    <link rel="stylesheet" type="text/css" href="./assets/style.css">
</head>

<body>

    <div id="container">
        <div id="flexContainer">
            <div class="flexBox">
                <div class="navBox">
                    {{#with links.driver}}
                    <div class="navGroup">
                        <span class="navHeader">Driver Standings</span>
                        <ul class="navList" aria-label="Driver Standings">
                            {{#each this}}
                            <li><a href="{{href}}">{{link}}</a></li>
                            {{/each}}
                        </ul>
                    </div>

                    {{/with}}
                    {{#with links.team}}
                    <div class="navGroup">
                        <span class="navHeader">Team Standings</span>
                        <ul class="navList" aria-label="Team Standings">
                            {{#each this}}
                            <li><a style="text-decoration:none;" href="{{href}}">{{link}}</a></li>
                            {{/each}}
                        </ul>
                    </div>
                    {{/with}}
                </div>
            </div>
            <div class="flexBox">
                <div style="margin-bottom: 1em;">
                    <div class="logo" style="display:flex;">
                        <img src="./assets/{{logo}}" />
                        <h2 style="margin-left:1em;">{{title}} Driver Standings</h2>
                    </div>
                </div>

                <table id="tableDrivers">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Nat</th>
                            <th>Driver</th>
                            {{#if showTeam}}
                            <th>Team</th>
                            {{/if}}
                            {{#if showCar}}
                            <th>Car</th>
                            {{/if}}

                            {{#each headerLocations}}
                            <th><img src="./assets/country-flags/{{this}}.png" /></th>
                            {{/each}}
                            <th>Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each rows}}
                        <tr>
                            <td>{{this.standing.currentPosition}}</td>
                            <td>
                                {{#if this.positive}}
                                <span class="positive"><i
                                        class="arrow up"></i>&nbsp;{{this.standing.positionChange}}</span>
                                {{/if}}
                                {{#if this.neutral}}
                                <span class="neutral">=</span>
                                {{/if}}
                                {{#if this.negative}}
                                <span class="negative"><i
                                        class="arrow down"></i>&nbsp;{{this.standing.positionChange}}</span>
                                {{/if}}
                            </td>
                            <td><img src="./assets/country-flags/{{this.country.code}}.png"
                                    style="max-width:1.5em; max-height:1.5em;" /></td>
                            <td class="text-left bold">{{this.standing.name}}</td>
                            <td>
                                <img src="./assets/teams/{{this.driver.teamId}}.png"
                                    style="max-width:2em; max-height:2em;" />
                            </td>
                            <td>
                                <img src="./assets/cars/{{this.car}}.png" style="max-width:2em; max-height:2em;" />
                            </td>
                            {{#each this.results}}{{#with this}}
                            <td>
                                {{pointsDisplay}}
                            </td>
                            {{/with}}{{/each}}
                            <td class="bold">{{this.standing.totalPoints}}</td>
                        </tr>
                        {{/each}}
                    </tbody>

                </table>
            </div>

        </div>
    </div>

    <!--
        BACKGROUND ANIMATION
    -->
    <div id="particles-js"></div>
    <script src="http://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="./assets/particleConfig.js"></script>
</body>

</html>