<html>

<head>
    <link rel="stylesheet" type="text/css" href="./assets/css/style.css">
    <link rel="stylesheet" type="text/css" href="./assets/css/animation.css">
    <link rel="stylesheet" type="text/css" href="./assets/css/w3.css">
</head>

<body>
    <div class="w3-top">
        <div class="w3-bar w3-black">
            <div class="logo" style="float:left;padding:0.3em;">
                <img src="./assets/jrc_round.jpg" style="max-height:2em;">
            </div>
            <div class="w3-dropdown-hover w3-hide-small">
                <button class="w3-button">Driver Standings</button>
                <div class="w3-dropdown-content w3-bar-block w3-card-4 w3-hide-small">
                    {{#with links.driver}}
                    {{#each this}}
                        <a href="{{href}}" class="w3-bar-item w3-button {{#if active}}active{{/if}}">{{link}}</a>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
            <div class="w3-dropdown-hover w3-hide-small">
                <button class="w3-button">Team Standings</button>
                <div class="w3-dropdown-content w3-bar-block w3-card-4 w3-hide-small">
                    {{#with links.team}}
                    {{#each this}}
                    <a href="{{href}}" class="w3-bar-item w3-button {{#if active}}active{{/if}}">{{link}}</a>
                    {{/each}}
                    {{/with}}
                </div>
            </div>
            <a href="javascript:void(0)" class="w3-bar-item w3-button w3-right w3-hide-large w3-hide-medium"
                onclick="openNav()">&#9776;</a>

        </div>

        <div id="mobileNav" class="w3-bar-block w3-black w3-hide w3-hide-large w3-hide-medium">
            <span class="w3-bar-item">Driver Standings</span>
            {{#with links.driver}}
            {{#each this}}
            <a href="{{href}}" class="w3-bar-item w3-button {{#if active}}active{{/if}}">{{link}}</a>
            {{/each}}
            {{/with}}
            <span class="w3-bar-item">Team Standings</span>
            {{#with links.team}}
            {{#each this}}
            <a href="{{href}}" class="w3-bar-item w3-button {{#if active}}active{{/if}}">{{link}}</a>
            {{/each}}
            {{/with}}
        </div>
    </div>
    <div id="container">
        <div id="flexContainer">
            <div class="flexBox">
                <div style="margin-bottom: 1em;">
                    <div class="logo" style="display:flex;">
                        <img src="./assets/{{logo}}" />
                        <h2 style="margin-left:1em;">{{title}} Driver Standings</h2>
                    </div>
                </div>

                <table id="tableDrivers">
                    <thead>
                        <tr>
                            <th></th>
                            <th></th>
                            <th>Nat</th>
                            <th>Driver</th>
                            {{#if showTeam}}
                            <th>Team</th>
                            {{/if}}
                            {{#if showCar}}
                            <th>Car</th>
                            {{/if}}

                            {{#each headerLocations}}
                            <th><img src="./assets/country-flags/{{this}}.png" /></th>
                            {{/each}}
                            <th>Points</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each rows}}
                        <tr>
                            <td>{{this.standing.currentPosition}}</td>
                            <td>
                                {{#if this.positive}}
                                <span class="positive"><i
                                        class="arrow up"></i>&nbsp;{{this.standing.positionChange}}</span>
                                {{/if}}
                                {{#if this.neutral}}
                                <span class="neutral">=</span>
                                {{/if}}
                                {{#if this.negative}}
                                <span class="negative"><i
                                        class="arrow down"></i>&nbsp;{{this.standing.positionChange}}</span>
                                {{/if}}
                            </td>
                            <td><img src="./assets/country-flags/{{this.country.code}}.png"
                                    style="max-width:1.5em; max-height:1.5em;" /></td>
                            <td class="text-left bold">{{this.standing.name}}</td>
                            <td>
                                <img src="./assets/teams/{{this.driver.teamId}}.png"
                                    style="max-width:2em; max-height:2em;" />
                            </td>
                            <td>
                                <img src="./assets/cars/{{this.car}}.png" style="max-width:2em; max-height:2em;" />
                            </td>
                            {{#each this.results}}{{#with this}}
                            <td>
                                {{pointsDisplay}}
                            </td>
                            {{/with}}{{/each}}
                            <td class="bold">{{this.standing.totalPoints}}</td>
                        </tr>
                        {{/each}}
                    </tbody>

                </table>
            </div>
        </div>
    </div>

    <!--
        BACKGROUND ANIMATION
    -->
    <div id="particles-js"></div>
    <script src="http://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script src="./assets/particleConfig.js"></script>
    <script>
        function openNav() {
            var x = document.getElementById("mobileNav");
            if (x.className.indexOf("w3-show") == -1) {
                x.className += " w3-show";
            } else {
                x.className = x.className.replace(" w3-show", "");
            }
        }
    </script>
</body>

</html>